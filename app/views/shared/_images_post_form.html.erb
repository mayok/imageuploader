<a href="#" id="dummy-btn" class="btn btn-lg">ファイルを選択</a>
<script type="text/javascript">
$('#dummy-btn').on('click', function(){
  $('#image_files').click()
});
</script>
<%= form_for(@image, :html => {:multipart => true}) do |f| %>
  <%= f.file_field :picture, style: "display: none" %>

  <%= f.label :title, class: "input-field" do %>
    タイトル
    <%= f.text_field :title %>
  <% end %>

  <%= f.label :caption, class: "input-field" do %>
    キャプション
    <%= f.text_field :caption %>
  <% end %>

  <%= f.submit "投稿する", class: "btn" %>
<% end %>
<script type="text/javascript">
$(function(){
  $('input:submit').attr('disabled', true);
  $('input:file').change(
      function(){
        if($(this).val()) {
          $('input:submit').removeAttr('disabled');
        }
        else {
          $('input:submit').attr('disabled', true);
        }
      });
});
</script>
